{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "dashboard#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_AUTH_SERVER_API_URL",
        "NEXT_PUBLIC_TWITCH_APPLICATION_CLIEND_ID",
        "NEXT_PUBLIC_TWITCH_APPLICATION_REDIRECT_PATH",
        "NEXT_PUBLIC_TWITCH_APPLICATION_SCOPES"
      ],
      "cache": false,
      
      "outputs": [
        ".next/**"
      ]
    },
    "listener#dev:watch":{
      "cache": false
    }
  }
}